@{
    ViewData["Title"] = "Create New Movie";
}
@model homework3.Models.MovieModel

<h1>@ViewData["Title"]</h1>

<form class="form" asp-action="Movies" method="post">
    <fieldset>
        <legend>New Movie</legend>
        <div class="form">
            <label asp-for="category">Category: </label>
            <br />
            <input class="category" asp-for="category" id="category" />
            <br />
            <label asp-for="title">Title: </label>
            <br />
            <input class="title" asp-for="title" id="title" />
            <br />
            <label asp-for="year">Year: </label>
            <br />
            <input class="year" asp-for="year" id="year" />
            <br />
            <label asp-for="director">Director: </label>
            <br />
            <input class="director" asp-for="director" id="director" />
            <br />
            <br />
            <label asp-for="rating">Rating: </label>
            <br />
            <select name="rating" id="rating" asp-for="rating">
                <option value="r">R</option>
                <option value="pg13">PG-13</option>
                <option value="pg">PG</option>
                <option value="g">G</option>
            </select>
            <br />
            <br />
            <p asp-for="edited">Edited:</p>
            <select name="edited" id="edited" asp-for="edited">
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
            <br />
            <br />
            <label asp-for="lentto">Lent To: </label>
            <br />
            <input class="lentto" asp-for="lentto" id="lentto" />
            <br />
            <label asp-for="notes">Notes: </label>
            <br />
            <textarea rows="4" cols="50" maxlength="25" placeholder="Enter text here" asp-for="notes"></textarea>
            <br />
        </div>
        <div>
            <button type="submit" id="calculate" >Submit Movie</button>
        </div>
    </fieldset>
</form>

<h1 style="color:red">@ViewBag.Message</h1>
